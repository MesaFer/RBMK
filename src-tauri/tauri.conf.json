{
  "productName": "RBMK Simulator",
  "version": "0.1.0",
  "identifier": "com.rbmk.simulator",
  "build": {
    "beforeDevCommand": "npm run dev --prefix ../ui",
    "devUrl": "http://127.0.0.1:5173",
    "beforeBuildCommand": "npm run build --prefix ../ui",
    "frontendDist": "../ui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "RBMK-1000 Reactor Simulator",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
